  regsub -all "\u00dc" ${sStr1} {\&Uuml;}   sStr2
  regsub -all "\u00dd" ${sStr2} {\&Yacute;} sStr1
  regsub -all "\u00de" ${sStr1} {\&THORN;}  sStr2
  regsub -all "\u00df" ${sStr2} {\&szlig;}  sStr1
  regsub -all "\u00e0" ${sStr1} {\&agrave;} sStr2
  regsub -all "\u00e1" ${sStr2} {\&aacute;} sStr1
  regsub -all "\u00e2" ${sStr1} {\&acirc;}  sStr2
  regsub -all "\u00e3" ${sStr2} {\&atilde;} sStr1
  regsub -all "\u00e4" ${sStr1} {\&auml;}   sStr2
  regsub -all "\u00e5" ${sStr2} {\&aring;}  sStr1
  regsub -all "\u00e6" ${sStr1} {\&aelig;}  sStr2
  regsub -all "\u00e7" ${sStr2} {\&ccedil;} sStr1
