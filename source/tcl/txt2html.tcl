  regsub -all "\u00c8" ${sStr1} {\&Egrave;} sStr2
  regsub -all "\u00c9" ${sStr2} {\&Eacute;} sStr1
  regsub -all "\u00ca" ${sStr1} {\&Ecirc;}  sStr2
  regsub -all "\u00cb" ${sStr2} {\&Euml;}   sStr1
  regsub -all "\u00cc" ${sStr1} {\&Igrave;} sStr2
  regsub -all "\u00cd" ${sStr2} {\&Iacute;} sStr1
  regsub -all "\u00ce" ${sStr1} {\&Icirc;}  sStr2
  regsub -all "\u00cf" ${sStr2} {\&Iuml;}   sStr1
